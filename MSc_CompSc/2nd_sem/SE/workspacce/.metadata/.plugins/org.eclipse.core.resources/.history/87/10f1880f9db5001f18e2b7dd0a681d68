package package1;

import java.awt.BorderLayout;
import java.awt.Frame;
import java.awt.Graphics;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class LoadAndDisplayPGMa extends JPanel 
{
	private static final long serialVersionUID = 1L;
	
	BufferedImage orignalImage;
	BufferedImage readImage;
	public static int width = 0;
	public static int height = 0;
	
	public LoadAndDisplayPGMa(BufferedImage image)
	{
		this.orignalImage = image;
		
		width = image.getWidth();
		height = image.getHeight();
		
		this.readImage = new BufferedImage(width,height,BufferedImage.TYPE_INT_RGB);
	}

	protected void paintComponent(Graphics g) 
    {
		g.drawImage(orignalImage, 10, 10, this);
    }
	
	public static void main(String[] args) 
	{
		BufferedImage image = null; 
		
		String path="C:\\images\\MATLAB Screenshot.bmp";
		
		try 
		{
			image = ImageIO.read(new File(path));
		}
		catch (IOException e) 
		{
			//System.out.print("Cannt");
			e.printStackTrace();
		}
		System.out.println(image);
		LoadAndDisplayPGMa ob = new LoadAndDisplayPGMa(image);
		
		JFrame frame = new JFrame();
		frame.setTitle("PGM B Loading and Displaying");
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.add(ob);
		frame.setExtendedState(Frame.MAXIMIZED_BOTH);
		//frame.pack();
		frame.setVisible(true);
	}

}
