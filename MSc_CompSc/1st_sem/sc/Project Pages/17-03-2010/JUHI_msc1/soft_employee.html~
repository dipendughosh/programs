<script type="text/javascript">
function validate_required(field,alerttxt)
{
with (field)
  {
  if (value==null||value=="")
    {
    alert(alerttxt);return false;
    }
  else
    {
    return true;
    }
  }
}

function validate_form(thisform)
{
with (thisform)
  {
  if (validate_required(e_id,"E_id must be filled out!")==false)
  {e_id.focus();return false;}
  }
}
</script> 
</head>
<body>
<br />
<br />
<hr />
<fieldset>
<legend>ENTER THE INFORMATION</legend>
<br />
<form action="soft_insert1.php" onsubmit="return validate_form(this)" method="post">
