		<link href="styles.css" rel="stylesheet" type="text/css">
		<script type="text/javascript">

var xmlhttp;
var CONF;		
		function InsertProgramme()
		{			
			xmlhttp=GetXmlHttpObject();
				if (xmlhttp==null)
				{
					alert ("Browser does not support HTTP Request");
					return;
				}
			connect_server();
		}
		
		function connect_server()
		{
			var CONF_fname,CONF_fid,CONF_type,CONF_name,CONF_s_date,CONF_f_date,CONF_venue_type,CONF_place,CONF_central_idea;
			
			alert("ppp");
			document.getElementById('insert_response').innerHTML = "Wait...";
			
			CONF_fname=document.getElementById('CONF_fname1').value;
			CONF_fid=document.getElementById('CONF_fid1').value;
			CONF_type=document.getElementById('CONF_type1').value;
			CONF_name=document.getElementById('CONF_name1').value;
			CONF_s_date=document.getElementById('CONF_s_date1').value;
			CONF_f_date=document.getElementById('CONF_f_date1').value;
			CONF_venue_type=document.getElementById('CONF_venue_type1').value;
			CONF_place=document.getElementById('CONF_place1').value;
			CONF_central_idea=document.getElementById('CONF_central_idea1').value;			
			
					
				if(CONF_fname=="" || CONF_fid=="" || CONF_type=="" || CONF_name=="" || CONF_s_date=="" || CONF_f_date=="" || CONF_venue_type=="" || CONF_place=="" || CONF_central_idea=="")
				{
					alert("Fields are incomplete");
					return;
				}			
			
			var url="Insert_into_conference.php";					
				
				url=url+"?CONF_fname="+CONF_fname+"&CONF_fid="+CONF_fid+"&CONF_type="+CONF_type+"&CONF_name="+CONF_name+"&CONF_s_date="+CONF_s_date+"&CONF_f_date="+CONF_f_date+"&CONF_venue_type="+CONF_venue_type+"&CONF_place="+CONF_place+"&CONF_central_idea="+CONF_central_idea;
				url=url+"&sid="+Math.random();	alert(url);			
				xmlhttp.open('get',url,true);
				xmlhttp.onreadystatechange=stateChanged;
				xmlhttp.send(null);
		}
		
		function stateChanged()
		{
			if (xmlhttp.readyState==4)
			{
				document.getElementById("insert_response").innerHTML=xmlhttp.responseText;	
				alert(xmlhttp.responseText);	
				clean();		
			}
		}

		function GetXmlHttpObject()
		{
			if (window.XMLHttpRequest)
			{
				// code for IE7+, Firefox, Chrome, Opera, Safari
				return new XMLHttpRequest();
			}
			if (window.ActiveXObject)
			{
				// code for IE6, IE5
				return new ActiveXObject("Microsoft.XMLHTTP");
			}
		return null;
		}

		function clean()
		{
			document.getElementById('CONF_fname1').value="";
			document.getElementById('CONF_fid1').value="";
			document.getElementById('CONF_type1').value="";
			document.getElementById('CONF_name1').value="";
			document.getElementById('CONF_s_date1').value="";
			document.getElementById('CONF_f_date1').value="";
			document.getElementById('CONF_venue_type1').value="";
			document.getElementById('CONF_place1').value="";
			document.getElementById('CONF_central_idea1').value="";
		}
					
		
</script>		
</head>		

<body onload="clean();">

