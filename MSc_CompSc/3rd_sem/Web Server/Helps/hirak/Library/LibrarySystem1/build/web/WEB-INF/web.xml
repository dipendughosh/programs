<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>LirarySystem.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResourceServlet</servlet-name>
        <servlet-class>LirarySystem.ResourceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchResourceServlet</servlet-name>
        <servlet-class>LirarySystem.SearchResourceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllocateResourceServlet</servlet-name>
        <servlet-class>LirarySystem.AllocateResourceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/RegistrationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResourceServlet</servlet-name>
        <url-pattern>/ResourceServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchResourceServlet</servlet-name>
        <url-pattern>/SearchResourceServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllocateResourceServlet</servlet-name>
        <url-pattern>/AllocateResourceServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
