
//Newton Rapson
#include<stdio.h>
#include<conio.h>
#include<math.h>

float f(float x)
{	return(pow(x,3)-3*x+1.06);
}

float fd(float x)
{	return(3*pow(x,2)-3);
}

float fdd(float x)
{	return(6*x);
}

void main()
{	float a,b,er,x,h,t;
	int i=0;
	do
	{	do
		{	clrscr();
			printf("Enter value of a :- ");
			scanf("%f",&a);
			printf("Enter value of b :- ");
			scanf("%f",&b);
			if(f(a)*f(b)<0)
				break;
			else
			{	printf("Re-enter\n");
				getch();
			}
		}while(1);
		if(f(a)<0)
		{	t=a;
			a=b;
			b=t;
		}
		printf("\nEnter the error :- ");
		scanf("%f",&er);
		x=(a+b)/2;
		while(fabs(b-a)>er)
		{	x=(a+b)/2;
			if(f(x)>0)
				a=x;
			else
				b=x;
		}
		if(fabs(f(x)*fdd(x))<fabs(fd(x)*fd(x)))
			break;
		else
		{	printf("Re-enter\n");
			getch();
		}
	}while(1);
	a=x;
	x=a-(f(a)/fd(a));
	printf("\nn\ta\t\tf(x)\t\tf'(x)\t\th\t\tx");
	while(fabs(x-a)>er)
	{	a=x;
		h=(f(a)/fd(a));
		x=a-h;
		printf("\n%d\t%f\t%f\t%f\t%f\t%f",i++,a,f(x),fd(x),h,x);
	}
	printf("\nx=%f",x);
	getch();
}

