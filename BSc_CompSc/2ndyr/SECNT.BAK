//Secant
#include<stdio.h>
#include<conio.h>
#include<math.h>

float f(float x)
{	return(pow(x,3)-9*x+2);
}

void main()
{	float a,b,t,er,x;
	int i=0;
	clrscr();
	do
	{	clrscr();
		printf("Enter value of a :- ");
		scanf("%f",&a);
		printf("Enter value of b :- ");
		scanf("%f",&b);
		if(f(a)*f(b)<0)
			break;
		else
		{	printf("Re-enter\n");
			getch();
		}
	}while(1);
	if(f(a)<0)
	{	t=a;
		a=b;
		b=t;
	}
	printf("\nEnter the error :- ");
	scanf("%f",&er);
	printf("\n\tn\tx\t\tf(x)");
	x=a;
	while(fabs(b-a)>er)
	{       b=a;
		a=x-((a-x)*f(x))/(f(a)-f(x));
		printf("\n\t%d\t%f\t%f",i++,b,a);
	}
	printf("\nx=%f",a);
	getch();
}

