#include<stdio.h>
#include<conio.h>

struct stack
{	int a[100];
	int top;
};

struct stack push(struct stack);
struct stack pop(struct stack);
void displaystack(struct stack);

void main()
{       struct stack s;
	int c,i;
	s.top=-1;
	do
	{	clrscr();
		printf("\t\tM E N U");
		printf("\n\t1.PUSH");
		printf("\n\t2.POP");
		printf("\n\t3.Display Stack");
		printf("\n\t4.Exit");
		printf("\n\tEnter choice:-");
		scanf("%d",&c);
		switch(c)
		{	case 1:
				if(s.top==99)
					printf("\nStack Full\n");
				else
					s=push(s);
				break;
			case 2:
				if(s.top==-1)
					printf("\nStack Empty");
				else
					s=pop(s);
				break;
			case 3:
				if(s.top==-1)
					printf("\nStack does not exist");
				else
					displaystack(s);
				break;
			case 4:
				printf("Exiting Program");
				for(i=0;i<10;i++)
				{
					delay(600);
					printf(".");
				}
				exit(0);
			default:
				printf("\n\n\aWrong input\a");
				break;
		       }
	}while(1);
}

struct stack push(struct stack x)
{	printf("\nEnter value - ");
	x.top=x.top+1;
	scanf("%d",&x.a[x.top]);
	return(x);
}

struct stack pop(struct stack x)
{	printf("\nPopd data - %d",x.a[x.top]);
	getch();
	x.top=x.top-1;
	return(x);
}


void displaystack(struct stack x)
{       int y=x.top;
	while(y!=-1)
	{	printf("%d\t",x.a[y]);
		y--;
	}
	getch();
}
