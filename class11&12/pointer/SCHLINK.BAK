node *create (int n)
{	node *p,*q,*r;
	int i;
	//create first node
	p=new node;
	cout<<"\nEnter value of first node :";
	cin>>p->element;
	p->next=NULL;
	//store the address of this node
	q=p;
	//create remaining nodes
	for(i=0;i<n-1;i++)
	{	//get the next node
		r=new node;
		cout<<"\nEnter value of "n+1<<" th node :";
		cin>>r->element;
		r->next=NULL;
		//q points to the already created node
		//set q to r
		q->next=r;
		//now node pointed to last node a part of the list
		//ste q so that it still points to the lats elementof list
		q=r;
	}
	return p;
}
